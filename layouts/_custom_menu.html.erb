<div class="nav jquerytopmenu" name="menu" id="jquerytopmenu" style="width:100%">
  <ul style="float:left;" class="boutique_menu">

    <% content_tag :li, { :class => "nav_button", :style => @shop_style} do -%>
      <%= link_to @shop_link, "#{@store.user.create_my_url(@DOMAIN_NAME)}#{Language.print_force_lang(params[:lang])}my/boutique",:style => @link_style %>
      <% if @store && @store.show_marketplace %>
        <ul>

          <% content_tag :li do -%>
            <%= link_to @store.user.shop_link_text(@store.locale),
              "#{@store.user.create_my_url(@DOMAIN_NAME)}#{Language.print_force_lang(params[:lang])}my/boutique" %>
          <% end %>

          <% content_tag :li do -%>
            <%= link_to t(:marketplace_products, :locale => @store.locale), "#{@store.user.create_my_url(@DOMAIN_NAME)}#{Language.print_force_lang(params[:lang])}my/marketplace" %>
          <% end %>

        </ul>
      <% end %>
    <% end %>

    <% if @store.display_designs_tab == true %>
      <% content_tag :li, { :class => "nav_button", :style => @design_style} do -%>
        <%= link_to @design_link, "#{@store.user.create_my_url(@DOMAIN_NAME)}#{Language.print_force_lang(params[:lang])}my/designs",:style => @link_style %>
      <% end %>
    <% end %>

    <% if @store.flash_active_in_my == true %>
      <% content_tag :li, { :class => "nav_button", :style => @create_style} do -%>
        <%= link_to @create_link, boutique_create_tshirt_url(@store), :style => @link_style %>
      <% end %>
    <% end %>

  </ul>
  <% if request.ssl? %>
    <div class="ssl_lock">
      <%= image_tag "izishirt2011/ssl-logo.gif", :alt=>"" %> <div class="text">SSL secure</div>
    </div>
  <div class="clear"></div>
  <% end %>
</div>
<div class="clear"></div>