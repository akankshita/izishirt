            <label><%= @featured_designer.rank.rank if @featured_designer.rank %></label>
          </li>
          <li><label><%=@featured_count%> design(s)</label></li>
          <li>
            <a class="smallRedLink" href="<%=@featured_site%>">
              <%=t(:view_designs)%>
            </a>
          </li>
          <li>
            <a class="smallRedLink" href="<%= @featured_site%>" >
              <%=truncate(@featured_designer.username.capitalize,:length=>25)%>
            </a>
          </li>
          <li>
            <% if @featured_count > 0 %>
            <%= link_to image_tag(@featured_designs[0][0],
                        :width => '63', :height => '63',
                        :alt => '', :class => 'innerDesign'),
                "#{t(:menu_create_shirt_url)}/#{@featured_designs[0][1]}"%>
