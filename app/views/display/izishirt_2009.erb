  <div class="last span-14 redBox scrollWrapper">
    <div class="left redBoxLeft noPad noMarg noBord"></div>
    <div class="left redBoxHeader noPad noMarg noBord blogBoxHeader">
      <label>Blog</label>
    </div>
    <div class="left redBoxRight noPad noMarg noBord"></div>
    <div class="clearfix"></div>
    <div class="noMarg boxContent blogBox">
      <div id="blog" class="scrollPane">
      <% if @xmlfeed %>
        <% @xmlfeed.each do |entry| %>
          <div class="blogTitle noPad noMarg redBoxInnerTitle">
            <h2><%= truncate entry.title, :length=>85 %></h2>
          </div>
          <span class="blue"><%= entry.pubDate %> | Posted by Izishirt </span>
          <%= truncate strip_tags(entry.content_encoded), :length => 500, 
            :omission => "...<br />" +link_to("(read more)", entry.link,
                                  :class => 'red bold noDecoration right',
                                  :target => '_blank')+"<br /><br />" %>
        <% end %>
      <% end %>
      </div>
    </div>
    <div class="boxBottomLeft blogBottomLeft"></div>
    <div class="boxBottomMiddle blogBottomMiddle"></div>
  </div>
  <!-- EO Blog Box -->

