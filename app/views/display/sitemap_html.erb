<div id="sitemap_container">
  <div id="sitemap_title"><%= t(:title_sitemap, :domain=>@DOMAIN_NAME.capitalize) %></div>
  <div id="left_container">
    <div id="left_title"><%= @DOMAIN_NAME.capitalize %></div>

    <div class="section">
      <div class="section_title">Izishirt</div>
      <ul>
        <li><%= link_to t(:menu_about), {:controller => '/display', :action => 'about_us'}%></li>
        <li><%= link_to t(:shipping_and_refunds), {:controller => '/display', :action => 'shipping_info'}%></li>
        <li><%= link_to(t(:order_tracking), {:controller=>"/order"})%></li>
        <li><%= link_to("Contact", {:controller=>"/display", :action=>"contact"})%></li>
		<li><a href="<%= @canonical_begin_url %>/local/custom-tshirt-printing">Local</a></li>
		
      </ul>
    </div>

    <div class="section">
      <div class="section_title"><%=t(:create)%></div>
      <ul>
        <li><%= link_to("T-shirts", create_tshirt_url())%></li>
            <li><%= link_to(t(:hoodies), model_url(100))%></li>
            <li><%= link_to(t(:tank_tops), model_url(56))%></li>
            <li><%= link_to(t(:sports_tees), model_url(45))%></li>
            <li><%= link_to(t(:tote_bags), model_url(85))%></li>
            <li><%= link_to(t(:aprons), model_url(108))%></li>
            <li><%= link_to(t(:kids_apparel), model_url(35))%></li>
      </ul>
    </div>

    <div class="section">
      <div class="section_title"><%=t(:shop)%></div>
      <ul>
        <li class="top_li"><%= link_to(t(:marketplace), "/" + t(:new_marketplace_main_url))%></li>
		<li class="top_li"><%= link_to(t(:wholesale_menu), "/" + t(:new_bulk_main_url))%>
      </ul>
    </div>

    

  </div>

  <div id="right_container">
    <div id="right_title">
      <%= t(:designs_title_sitemap) %>
    </div>

    <% third = @categories.length/3 %>
    <% first_categories = @categories[0..third] %>
    <% second_categories = @categories[third+1..(third*2)+2] %>
    <% third_categories = @categories[(third*2)+3..@categories.length-1] %>

    <div class="column">
      <ul class="parent">
        <li>  <%= link_to t(:new_designs),
            {:controller => 'display', :action => 'new'},
            :class => 'parent_link' %></li>
      </ul>

      <% first_categories.each do |category| %>
        <ul class="parent">
          <li>
            <%= link_to category.local_name(session[:language_id]).capitalize,
              category_url(category.id),
              :class => 'parent_link' %>
          </li>
          <% category.sub_categories.each do |sub_cat| %>
            <li>
              <%= link_to sub_cat.local_name(session[:language_id]).capitalize,
                category_url(sub_cat.id),
                :class => 'child_link' %>
            </li>
          <% end %>

        </ul>
      <% end %>
    </div>

    <div class="column">
      <% second_categories.each do |category| %>
        <ul class="parent">
          <li>
            <%= link_to category.local_name(session[:language_id]).capitalize,
              category_url(category.id),
              :class => 'parent_link' %>
          </li>
          <% category.sub_categories.each do |sub_cat| %>
            <li>
              <%= link_to sub_cat.local_name(session[:language_id]).capitalize,
                category_url(sub_cat.id),
                :class => 'child_link' %>
            </li>
          <% end %>

        </ul>
      <% end %>
    </div>

    <div class="column">
      <% third_categories.each do |category| %>
        <ul class="parent">
          <li>
            <%= link_to category.local_name(session[:language_id]).capitalize,
              category_url(category.id),
              :class => 'parent_link' %>
          </li>
          <% category.sub_categories.each do |sub_cat| %>
            <li>
              <%= link_to sub_cat.local_name(session[:language_id]).capitalize,
                category_url(sub_cat.id),
                :class => 'child_link' %>
            </li>
          <% end %>

        </ul>
      <% end %>
    </div>
    <div class="clear"></div>

  </div>


</div>