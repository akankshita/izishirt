<h1><%= t(:admin_user_edit_toptitle) + @user.username %></h1>

<% form_for :user, @user, :url => {:action => 'update', :id => @user.id} do |form| %>
	<%= render :partial => 'form', :locals => {:form => form}%>
	<%= render :partial => 'profile' if not @user.profile.nil? %>
	<div class="titleForm">&nbsp;</div>
	<div class="boxForm">
		<%= edit_form_buttons %>
	</div>
<% end %>