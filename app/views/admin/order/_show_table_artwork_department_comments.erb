<table width="100%">
	<% orders.each do |order| %>
		<% 

			comments = order.comments_per_comment_type("artwork", 1, 1000000)

			comments.each do |comment| 

				@myclass = cycle('odd','') 
		%>
			<tr class="<%= @myclass %>">
				<% if with_order_ids %>
					<td><%= order.id %></td>
				<% end %>
				
				<td><%= comment.username %></td>
				<td><%= comment.comment %></td>
				<td><%= comment.date_time %></td>
			</tr>
		<% end %>
	<% end %>
</table>
